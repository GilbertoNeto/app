<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Validade</th>
      <th>Bandeira</th>
      <th>Cvv</th>
      <th>Titular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.numero %></td>
        <td><%= card.validade %></td>
        <td><%= card.bandeira %></td>
        <td><%= card.cvv %></td>
        <td><%= card.titular %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
