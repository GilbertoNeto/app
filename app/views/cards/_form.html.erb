<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :numero %>
    <%= form.number_field :numero %>
  </div>

  <div class="field">
    <%= form.label :validade %>
    <%= form.date_select :validade %>
  </div>

  <div class="field">
    <%= form.label :bandeira %>
    <%= form.text_field :bandeira %>
  </div>

  <div class="field">
    <%= form.label :cvv %>
    <%= form.number_field :cvv %>
  </div>

  <div class="field">
    <%= form.label :titular %>
    <%= form.text_field :titular %>
  </div>

  <div class="field">
    <%= hidden_field_tag 'card[customer_id]', current_customer.id  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
