<div class="container">

	<p><%= notice %></p>
	<br>

<div class="row">
		<%= form_tag(search_path, :action => 'search', method: :get) do %>
			Encontre um lava-jato: 
			<%= text_field_tag :search, params[:search]  %>
			<%= submit_tag 'Search', name: nil , :class => 'btn btn-sm btn-outline-secondary'%>
		<% end %>
</div>
<br><br><br>

<div class="row">
  <% for business in @businesses %>
		<div class="col-md-4">
		  <div class="card mb-4 box-shadow">
		    <h2 class="text-center"><%= business.name %></h2>
		    <div class="card-body">
		      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
		      <div class="d-flex justify-content-between align-items-center">
		        <div class="btn-group">
		           <%= link_to 'Agendar', new_business_schedule_path(business.id), :class => 'btn btn-sm btn-outline-secondary'  %>
		        </div>
		        <small class="text-muted">X carros na fila</small>

		      </div>
		      <p>Averate rating</p>
				<div id="star"></div>
				<div>
					<p>Your rating</p>
					<div id="user_star"></div>
					<% if current_customer%>
						<% @rating = Rating.where(business_id: business.id, customer_id: current_customer.id).first%>
						<%unless @rating%>
							<%@rating = Rating.create(business_id: business.id, customer_id: current_customer.id, score: 0)%>
							<%end%>
				</div>
					
					<script>
					  $('#star').raty({
					    readOnly: true,
					    score: <%= business.average_rating %>,
					    
					  });

					  $('#user_star').raty({
					    score: <%= @rating.score %>,
					    
					    click: function(score, evt) {
					      $.ajax({
					        url: '/ratings/' + <%= @rating.id %>,
					        type: 'PATCH',
					        data: { score: score }
					      });
					    }
					  });

					  $('#star').raty({
					  readOnly: true,
					  score: <%= business.average_rating %>,
					  
					  });

					  $('#user_star').raty({
						  score: <%= @rating.score %>,
						  
						  click: function(score, evt) {
						    $.ajax({
						      url: '/ratings/' + <%= @rating.id %>,
						      type: 'PATCH',
						      data: { score: score }
						    }).done(function (data){});
						  }
					  });
					</script>
				<% end %>
		    </div>
		  </div>
		</div>
		
	<% end %>
</div>

</div>

